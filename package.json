{
  "name": "hpke-js",
  "version": "0.6.0",
  "description": "A Hybrid Public Key Encryption (HPKE) library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dajiaji/hpke-js.git"
  },
  "homepage": "https://github.com/dajiaji/hpke-js#readme",
  "license": "MIT",
  "main": "dist/cjs/hpke.js",
  "types": "dist/types/mod.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/hpke.js",
      "require": "./dist/cjs/hpke.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "hpke",
    "rfc9180",
    "security",
    "encryption",
    "mls"
  ],
  "scripts": {
    "build": "node scripts/build.js && npm run build-types",
    "build-types": "tsc -p tsconfig.build.json",
    "clean": "git clean -fdX dist *.tsbuildinfo",
    "prepack": "npm run build",
    "test": "tsc && jest --coverage",
    "typedoc": "typedoc",
    "lint": "eslint --max-warnings=0 --cache ."
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "esbuild": "^0.14.36",
    "eslint": "^8.14.0",
    "eslint-plugin-testing-library": "^5.3.1",
    "jest": "^27.5.1",
    "jest-mock": "^27.5.1",
    "lint-staged": "^12.4.0",
    "ts-jest": "^27.1.4",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "author": "Ajitomi Daisuke",
  "bugs": {
    "url": "https://github.com/dajiaji/hpke-js/issues"
  },
  "dependencies": {
    "@stablelib/chacha20poly1305": "^1.0.1",
    "@stablelib/x25519": "^1.0.2"
  }
}
