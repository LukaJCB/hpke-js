{
  "name": "@dajiaji/hpke",
  "version": "1.2.9",
  "exports": "./mod.ts",
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.41.2",
    "@hpke/core": "jsr:@hpke/core@^1.2.9",
    "@std/assert": "jsr:@std/assert@1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "publish": {
    "include": [
      "README.md",
      "core/",
      "deno.json",
      "deno.lock",
      "mod.ts",
      "src/",
      "x/chacha20poly1305/src/"
    ],
    "exclude": [
      "core/LICENSE",
      "core/README.md",
      "core/deno.json",
      "core/deno.lock",
      "core/dnt.ts",
      "core/samples/",
      "core/test/",
      "core/tsconfig.json"
    ]
  },
  "fmt": {
    "include": [
      "**/*.md",
      "**/*.json",
      "core/",
      "dnt.ts",
      "mod.ts",
      "samples/",
      "src/",
      "x/",
      "test/"
    ],
    "exclude": [
      "**/*/*.js",
      "**/*/npm/",
      "coverage/*.json"
    ]
  },
  "lint": {
    "include": [
      "**/*.md",
      "**/*.json",
      "core/",
      "dnt.ts",
      "mod.ts",
      "samples/",
      "src/",
      "x/",
      "test/"
    ],
    "exclude": [
      "**/*/*.js",
      "**/*/npm/",
      "coverage/*.json"
    ]
  },
  "tasks": {
    "test": "deno fmt && deno lint && deno test test -A --fail-fast --doc --coverage=coverage --parallel --allow-read",
    "cov": "deno coverage ./coverage --lcov --exclude='test'",
    "dnt": "deno run -A dnt.ts $(git describe --tags $(git rev-list --tags --max-count=1))",
    "minify": "esbuild npm/esm/mod.js --bundle --format=esm --minify"
  }
}
