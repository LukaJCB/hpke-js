{
  "workspace": [
    "./x/core",
    "./x/chacha20poly1305",
    "./x/dhkem-x25519",
    "./x/dhkem-x448",
    "./x/dhkem-secp256k1",
    "./x/hybridkem-x25519-kyber768",
    "./x/hpke-js",
    "./x/core/samples/deno",
    "./x/chacha20poly1305/samples/deno",
    "./x/dhkem-x25519/samples/deno",
    "./x/dhkem-x448/samples/deno",
    "./x/dhkem-secp256k1/samples/deno",
    "./x/hybridkem-x25519-kyber768/samples/deno",
    "./x/hpke-js/samples/deno"
  ],
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.41.3",
    "@std/assert": "jsr:@std/assert@^1.0.3",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "fmt": {
    "exclude": [
      "npm-packages/",
      "**/*/*.js",
      "**/*/npm/",
      "coverage/*.json"
    ]
  },
  "lint": {
    "exclude": [
      "npm-packages/",
      "**/*/*.js",
      "**/*/npm/",
      "coverage/*.json"
    ]
  },
  "test": {
    "exclude": [
      "npm-packages/",
      "**/*/*.js",
      "**/*/npm/",
      "coverage/*.json"
    ]
  },
  "tasks": {
    "test": "deno fmt && deno lint && deno test -A --fail-fast --doc --coverage=coverage --parallel --allow-read",
    "cov": "deno coverage ./coverage --lcov --exclude='test'",
    "dnt": "./scripts/run_dnt.sh",
    "minify": "esbuild npm/esm/mod.js --bundle --format=esm --minify"
  }
}
