{
  "workspace": [
    "./x/core",
    "./x/chacha20poly1305",
    "./x/dhkem-x25519",
    "./x/dhkem-x448",
    "./x/dhkem-secp256k1",
    "./x/hybridkem-x25519-kyber768",
    "./x/hpke-js"
  ],
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.41.2",
    "@std/assert": "jsr:@std/assert@1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0"
  },
  "fmt": {
    "include": [
      "**/*.md",
      "**/*.json",
      "dnt.ts",
      "mod.ts",
      "mod_core.ts",
      "samples/",
      "src/",
      "x/",
      "test/"
    ],
    "exclude": [
      "**/*/*.js",
      "**/*/npm/",
      "coverage/*.json"
    ]
  },
  "lint": {
    "include": [
      "**/*.md",
      "**/*.json",
      "dnt.ts",
      "mod.ts",
      "samples/",
      "src/",
      "x/",
      "test/"
    ],
    "exclude": [
      "**/*/*.js",
      "**/*/npm/",
      "coverage/*.json"
    ]
  },
  "test": {
    "include": [
      "x/**/test"
    ],
    "exclude": [
      "**/*/*.js",
      "**/*/npm/",
      "coverage/*.json"
    ]
  },
  "tasks": {
    "test": "deno fmt && deno lint && deno test -A --fail-fast --doc --coverage=coverage --parallel --allow-read",
    "cov": "deno coverage ./coverage --lcov --exclude='test'",
    "dnt": "deno run -A dnt.ts $(git describe --tags $(git rev-list --tags --max-count=1))",
    "minify": "esbuild npm/esm/mod.js --bundle --format=esm --minify"
  }
}
